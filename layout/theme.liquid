<!doctype html>
<html lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#00ff00">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ page_title }}</title>
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '#00FF7F',
              secondary: '#8A8A4B',
              accent: '#B8E1E9',
              dark: '#1E1E24',
              darker: '#121212',
              gaming: {
                green: '#00FF7F',
                purple: '#7B2CBF',
                darkpurple: '#5A189A',
                pink: '#F5A9B8',
                blue: '#B8E1E9',
              },
            },
            fontFamily: {
              sans: ['Rajdhani', 'sans-serif'],
              mono: ['Share Tech Mono', 'monospace'],
            },
          },
        },
      };
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&family=Share+Tech+Mono&display=swap"
      rel="stylesheet"
    >

    {{ content_for_header }}
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}

    <style>
      body {
        font-family: 'Rajdhani', sans-serif;
        background-color: #1e1e24;
        color: #ffffff;
      }

      .top-bar {
        background-color: #000000;
        color: #ffffff;
      }

      .main-nav {
        background: linear-gradient(90deg, #8a8a4b 0%, #8a8a4b 100%);
        border-bottom: 1px solid #8a8a4b;
      }

      .hot-badge {
        background-color: #00ff7f;
        color: #000000;
        padding: 2px 8px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 12px;
      }

      .featured-card {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        transition: all 0.3s ease;
      }

      .featured-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 255, 127, 0.2);
      }

      .view-details {
        display: inline-flex;
        align-items: center;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
      }

      .view-details:hover {
        transform: translateX(5px);
      }

      .brand-slider {
        background-color: #1a1a1a;
        padding: 20px 0;
      }

      .brand-logo {
        max-height: 40px;
        filter: grayscale(100%) brightness(1.2);
        transition: all 0.3s ease;
      }

      .brand-logo:hover {
        filter: grayscale(0%) brightness(1.2);
      }
    </style>
  </head>

  <body class="flex flex-col min-h-screen">
    <!-- Top Bar -->
    <div class="top-bar py-2 px-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex space-x-4">
          <a href="#" class="text-white hover:text-primary transition">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
