<section class="py-16 bg-dark relative overflow-hidden">
  <!-- Tech Background Elements -->
  <div class="absolute inset-0 z-0">
    <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-12">
      <div class="inline-block relative">
        <h2 class="text-3xl font-bold mb-2 uppercase diagonal-line pl-4">{{ section.settings.heading | default: 'Why Choose SmartCore' }}</h2>
        <div class="absolute -bottom-2 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-accent to-transparent"></div>
      </div>
      <p class="text-gray-400 max-w-2xl mx-auto font-light">{{ section.settings.subheading | default: 'We offer the ultimate gaming gear shopping experience with these premium benefits.' }}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for block in section.blocks %}
        <div class="relative group">
          <!-- Glow Effect -->
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-secondary rounded-lg blur opacity-0 group-hover:opacity-30 transition duration-300"></div>
          
          <div class="relative bg-darker rounded-lg p-6 border border-primary/20 group-hover:border-primary/40 transition-colors duration-300">
            <div class="bg-primary/10 w-16 h-16 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-primary/20 transition-colors duration-300">
              {% case block.settings.icon %}
                {% when 'shipping' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                  </svg>
                {% when 'warranty' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                {% when 'support' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                {% when 'returns' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z" />
                  </svg>
                {% when 'performance' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                {% when 'quality' %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                {% else %}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
              {% endcase %}
            </div>
            <h3 class="text-xl font-semibold mb-2 text-center uppercase tracking-wider">{{ block.settings.title }}</h3>
            <p class="text-gray-400 text-center">{{ block.settings.text }}</p>
            
            <!-- Tech Corner Accents -->
            <div class="absolute top-0 left-0 w-4 h-4 border-t border-l border-primary/40 group-hover:border-primary/80 transition-colors duration-300"></div>
            <div class="absolute top-0 right-0 w-4 h-4 border-t border-r border-primary/40 group-hover:border-primary/80 transition-colors duration-300"></div>
            <div class="absolute bottom-0 left-0 w-4 h-4 border-b border-l border-primary/40 group-hover:border-primary/80 transition-colors duration-300"></div>
            <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-primary/40 group-hover:border-primary/80 transition-colors duration-300"></div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

