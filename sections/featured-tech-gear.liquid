<section class="py-16 bg-dark">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold uppercase tracking-wider text-white">
        {{ section.settings.section_title | default: 'FEATURED TECH GEAR' }}
      </h2>
      <p class="text-gray-400 mt-2">
        {{ section.settings.section_subtitle | default: 'Enhance your digital experience with top-tier performance' }}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'category_card_small' %}
            <div class="md:col-span-3">
              <a href="{{ block.settings.category_link | default: '/collections/all' }}" class="block">
                <div class="bg-gradient-to-br {{ block.settings.gradient_colors }} rounded-lg overflow-hidden h-80 group hover:scale-105 transition-transform duration-300">
                  <div class="p-6 h-full flex flex-col justify-between">
                    <div>
                      <h3 class="text-2xl font-bold text-white mb-4">{{ block.settings.category_title }}</h3>
                      <div class="inline-flex items-center text-white hover:text-primary transition">
                        View details
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    </div>
                    {% if block.settings.category_image != blank %}
                      <div class="flex justify-center">
                        <img 
                          src="{{ block.settings.category_image | img_url: '200x200' }}" 
                          alt="{{ block.settings.category_title }}" 
                          class="max-h-32 object-contain"
                        >
                      </div>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          
          {% when 'category_card_large' %}
            <div class="md:col-span-6">
              <a href="{{ block.settings.category_link | default: '/collections/all' }}" class="block">
                <div class="bg-gradient-to-br {{ block.settings.gradient_colors }} rounded-lg overflow-hidden h-80 group hover:scale-105 transition-transform duration-300">
                  <div class="p-6 h-full flex flex-col justify-between">
                    <div>
                      <h3 class="text-2xl font-bold text-white mb-4">{{ block.settings.category_title }}</h3>
                      <div class="inline-flex items-center text-white hover:text-primary transition">
                        View details
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    </div>
                    {% if block.settings.category_image != blank %}
                      <div class="flex justify-center">
                        <img 
                          src="{{ block.settings.category_image | img_url: '300x200' }}" 
                          alt="{{ block.settings.category_title }}" 
                          class="max-h-40 object-contain"
                        >
                      </div>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          
          {% when 'category_card_wide' %}
            <div class="md:col-span-9">
              <a href="{{ block.settings.category_link | default: '/collections/all' }}" class="block">
                <div class="bg-dark border border-gray-800 rounded-lg overflow-hidden h-80 group hover:scale-105 transition-transform duration-300">
                  <div class="p-6 h-full flex justify-between items-center">
                    <div>
                      <h3 class="text-2xl font-bold text-white mb-4">{{ block.settings.category_title }}</h3>
                      <div class="inline-flex items-center text-white hover:text-primary transition">
                        View details
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    </div>
                    {% if block.settings.category_image != blank %}
                      <div class="flex justify-center">
                        <img 
                          src="{{ block.settings.category_image | img_url: '400x200' }}" 
                          alt="{{ block.settings.category_title }}" 
                          class="max-h-48 object-contain"
                        >
                      </div>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

