<section class="py-16 bg-darker">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold uppercase tracking-wider text-white">
        FEATURED GAMING GEAR
      </h2>
      <p class="text-gray-400 mt-2">
        Enhance your gameplay with top-tier performance
      </p>
    </div>
    
    <div class="grid grid-cols-12 gap-4 max-w-6xl mx-auto">
      <!-- Row 1 -->
      <!-- Headsets - Purple background, left -->
      <div class="col-span-12 md:col-span-3">
        <a href="/collections/headset" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-purple-600 to-purple-800 h-48 flex items-center justify-center">
            <div class="text-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/3.png?v=1730642575" 
                alt="Headsets" 
                class="mx-auto mb-4 max-h-20 transition-transform duration-300 group-hover:scale-110"
              >
              <h3 class="text-lg font-bold text-white underline">Headsets</h3>
            </div>
          </div>
        </a>
      </div>
      
      <!-- Gaming Mice - Large white background, center -->
      <div class="col-span-12 md:col-span-6">
        <a href="/collections/gaming-mouse" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-100 to-gray-200 h-48">
            <div class="absolute top-4 left-4">
              <h3 class="text-xl font-bold text-black underline">Gaming Mice</h3>
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/1.png?v=1730642575" 
                alt="Gaming Mice" 
                class="object-contain max-h-32 transition-transform duration-300 group-hover:scale-110"
              >
            </div>
          </div>
        </a>
      </div>
      
      <!-- Gaming Chairs - Pink background, right -->
      <div class="col-span-12 md:col-span-3">
        <a href="/collections/other-products" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-pink-400 to-pink-600 h-48 flex items-center justify-center">
            <div class="text-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/Gaming_mouse_2995_x_2600.png?v=1730687865" 
                alt="Gaming Chairs" 
                class="mx-auto mb-4 max-h-20 transition-transform duration-300 group-hover:scale-110"
              >
              <h3 class="text-lg font-bold text-white underline">Gaming Chairs</h3>
            </div>
          </div>
        </a>
      </div>
      
      <!-- Row 2 -->
      <!-- Game PC - Purple background, left -->
      <div class="col-span-12 md:col-span-3">
        <a href="/collections/game-pc" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-purple-600 to-purple-800 h-48 flex items-center justify-center">
            <div class="text-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/Gaming_mouse_2995_x_2600_f62548fc-17cd-4adc-bac9-58365f8f8f4e.png?v=1730688846" 
                alt="Game PC" 
                class="mx-auto mb-4 max-h-20 transition-transform duration-300 group-hover:scale-110"
              >
              <h3 class="text-lg font-bold text-white underline">Game PC</h3>
            </div>
          </div>
        </a>
      </div>
      
      <!-- Gaming Keyboard - Dark background, center -->
      <div class="col-span-12 md:col-span-6">
        <a href="/collections/gaming-keyboard" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-800 to-gray-900 h-48">
            <div class="absolute top-4 left-4">
              <h3 class="text-xl font-bold text-white underline">Gaming Keyboard</h3>
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/2.png?v=1730642643" 
                alt="Gaming Keyboard" 
                class="object-contain max-h-32 transition-transform duration-300 group-hover:scale-110"
              >
            </div>
          </div>
        </a>
      </div>
      
      <!-- VR Sets - Gray background, right -->
      <div class="col-span-12 md:col-span-3">
        <a href="/collections/vr-sets" class="block group">
          <div class="relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-500 to-gray-600 h-48 flex items-center justify-center">
            <div class="text-center">
              <img 
                src="//ascent-vortex.myshopify.com/cdn/shop/files/Gaming_mouse_2995_x_2600_054ad935-85d3-4b44-819c-4a6a71d9463b.png?v=1730689269" 
                alt="VR Sets" 
                class="mx-auto mb-4 max-h-20 transition-transform duration-300 group-hover:scale-110"
              >
              <h3 class="text-lg font-bold text-white underline">VR Sets</h3>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image Gallery",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "FEATURED GAMING GEAR"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Enhance your gameplay with top-tier performance"
    }
  ],
  "presets": [
    {
      "name": "Image Gallery",
      "category": "Image"
    }
  ]
}
{% endschema %}
