<section class="py-16 bg-dark">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold uppercase tracking-wider">FEATURED GAMING GEAR</h2>
      <p class="text-gray-400 mt-2">Enhance your gameplay with top-tier performance</p>
    </div>
    
    <div class="grid grid-cols-12 gap-6">
      <!-- Headsets Card -->
      <div class="col-span-12 md:col-span-3">
        <div class="featured-card bg-gaming-purple h-full flex flex-col">
          <div class="p-6 flex-grow flex flex-col justify-between">
            <h3 class="text-2xl font-bold mb-4">Headsets</h3>
            <a href="/collections/headsets" class="view-details mt-auto">
              View details
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="p-4 flex justify-center">
            <img src="{{ 'gaming-headset.png' | asset_url }}" alt="Gaming Headset" class="max-h-48">
          </div>
        </div>
      </div>
      
      <!-- Gaming Mice Card -->
      <div class="col-span-12 md:col-span-6">
        <div class="featured-card bg-gaming-blue/20 h-full flex flex-col">
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-4">Gaming Mice</h3>
            <a href="/collections/mice" class="view-details">
              View details
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="p-4 flex justify-center flex-grow">
            <img src="{{ 'gaming-mouse.png' | asset_url }}" alt="Gaming Mouse" class="max-h-64">
          </div>
        </div>
      </div>
      
      <!-- Gaming Chairs Card -->
      <div class="col-span-12 md:col-span-3">
        <div class="featured-card bg-gaming-pink h-full flex flex-col">
          <div class="p-6 flex-grow flex flex-col justify-between">
            <h3 class="text-2xl font-bold mb-4">Gaming Chairs</h3>
            <a href="/collections/chairs" class="view-details mt-auto">
              View details
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="p-4 flex justify-center">
            <img src="{{ 'gaming-chair.png' | asset_url }}" alt="Gaming Chair" class="max-h-48">
          </div>
        </div>
      </div>
      
      <!-- Game PC Card -->
      <div class="col-span-12 md:col-span-3">
        <div class="featured-card bg-gaming-darkpurple h-full flex flex-col">
          <div class="p-6 flex-grow flex flex-col justify-between">
            <h3 class="text-2xl font-bold mb-4">Game PC</h3>
            <a href="/collections/pc" class="view-details mt-auto">
              View details
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="p-4 flex justify-center">
            <img src="{{ 'gaming-pc.png' | asset_url }}" alt="Gaming PC" class="max-h-48">
          </div>
        </div>
      </div>
      
      <!-- Gaming Keyboard Card -->
      <div class="col-span-12 md:col-span-9">
        <div class="featured-card bg-dark h-full flex flex-col border border-gray-800">
          <div class="p-6 flex-grow flex flex-col justify-between">
            <h3 class="text-2xl font-bold mb-4">Gaming Keyboard</h3>
            <a href="/collections/keyboards" class="view-details mt-auto">
              View details
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="p-4 flex justify-center">
            <img src="{{ 'gaming-keyboard.png' | asset_url }}" alt="Gaming Keyboard" class="max-h-48">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

