<section class="py-16 bg-dark">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold uppercase tracking-wider text-white mb-4">
        {{ section.settings.section_title | default: 'NEXT-LEVEL VR EXPERIENCE' }}
      </h2>
      <p class="text-gray-400">
        {{ section.settings.section_subtitle | default: 'Designed for comfort, clarity, and immersion' }}
      </p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <div class="relative bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 overflow-hidden">
        <!-- VR Headset Image -->
        <div class="flex justify-center mb-8">
          {% if section.settings.vr_image != blank %}
            <img 
              src="{{ section.settings.vr_image | img_url: '600x400' }}" 
              alt="VR Headset" 
              class="max-w-md object-contain"
            >
          {% else %}
            <div class="w-80 h-60 bg-gray-700 rounded-lg flex items-center justify-center">
              <span class="text-gray-400">VR Headset Image</span>
            </div>
          {% endif %}
        </div>
        
        <!-- Features -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          {% for block in section.blocks %}
            {% if block.type == 'vr_feature' %}
              <div class="relative">
                <div class="bg-pink-500 w-3 h-3 rounded-full mx-auto mb-3"></div>
                <h4 class="text-white font-semibold mb-2">{{ block.settings.feature_title }}</h4>
                <p class="text-gray-400 text-sm">{{ block.settings.feature_description }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        {% if section.settings.cta_button_text != blank %}
          <div class="text-center mt-8">
            <a href="{{ section.settings.cta_button_link | default: '/collections/all' }}" 
               class="bg-primary hover:bg-primary/90 text-black font-bold py-3 px-8 rounded-lg uppercase tracking-wider transition">
              {{ section.settings.cta_button_text }}
            </a>
          </div>
        {% endif %}
        
        <!-- Decorative Elements -->
        <div class="absolute top-4 right-4 w-2 h-2 bg-pink-500 rounded-full"></div>
        <div class="absolute bottom-4 left-4 w-2 h-2 bg-blue-500 rounded-full"></div>
        <div class="absolute top-1/2 left-4 w-2 h-2 bg-green-500 rounded-full"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "VR Experience",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "NEXT-LEVEL VR EXPERIENCE"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Designed for comfort, clarity, and immersion"
    },
    {
      "type": "image_picker",
      "id": "vr_image",
      "label": "VR Headset Image"
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "CTA Button Link"
    }
  ],
  "blocks": [
    {
      "type": "vr_feature",
      "name": "VR Feature",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "label": "Feature Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VR Experience",
      "category": "Custom",
      "blocks": [
        {
          "type": "vr_feature",
          "settings": {
            "feature_title": "High-Resolution Display",
            "feature_description": "Crystal clear visuals for the best VR experience"
          }
        },
        {
          "type": "vr_feature",
          "settings": {
            "feature_title": "Comfortable Design",
            "feature_description": "Ergonomic fit for extended gaming sessions"
          }
        },
        {
          "type": "vr_feature",
          "settings": {
            "feature_title": "Advanced Tracking",
            "feature_description": "Precise movement detection and response"
          }
        }
      ]
    }
  ]
}
{% endschema %}
