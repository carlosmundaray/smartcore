<style>
  .icon-scroll-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .icon-scroll-wrapper {
    width: 100%;
    overflow: hidden;
  }
  
  .icon-scroll-track {
    display: flex;
    gap: 32px;
    animation: scrollInfinite 30s linear infinite;
    width: max-content;
  }
  
  .icon-scroll-item {
    flex: 0 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px;
    min-width: 140px;
  }
  
  .icon-image {
    width: 120px;
    height: 120px;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    border: 1px solid rgba(0, 168, 255, 0.1);
  }
  
  .icon-scroll-item:hover .icon-image {
    transform: translateY(-5px);
    background-color: rgba(0, 168, 255, 0.1);
    border-color: rgba(0, 168, 255, 0.3);
    box-shadow: 0 10px 25px rgba(0, 168, 255, 0.2);
  }
  
  .icon-image img {
    filter: brightness(0.8) contrast(1.2);
    transition: filter 0.3s ease;
  }
  
  .icon-scroll-item:hover .icon-image img {
    filter: brightness(1) contrast(1) drop-shadow(0 0 10px rgba(0, 168, 255, 0.5));
  }
  
  .icon-scroll-item:hover .icon-scroll-track {
    animation-play-state: paused;
  }
  
  @keyframes scrollInfinite {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }
  
  @media (max-width: 768px) {
    .icon-image {
      width: 90px;
      height: 90px;
      padding: 12px;
    }
    
    .icon-scroll-track {
      gap: 24px;
    }
    
    .icon-scroll-item {
      min-width: 110px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const scrollTrack = document.getElementById('icon-scroll-track');
    const scrollContainer = document.getElementById('icon-scroll-container');
    let isHovered = false;
    
    // Pause animation on hover
    scrollContainer.addEventListener('mouseenter', function() {
      isHovered = true;
      scrollTrack.style.animationPlayState = 'paused';
    });
    
    scrollContainer.addEventListener('mouseleave', function() {
      isHovered = false;
      scrollTrack.style.animationPlayState = 'running';
    });
  });
</script>

