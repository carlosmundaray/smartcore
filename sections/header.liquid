<header id="main-header" class="fixed top-8 left-0 right-0 z-50 transition-all duration-300 ease-in-out">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-white flex items-center">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}" class="h-10">
          {% else %}
            SMARTCORE
          {% endif %}
        </a>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-white hover:text-primary transition uppercase tracking-wider font-medium">HOME</a>
        
        <div class="relative group">
          <a href="/collections" class="text-white hover:text-primary transition uppercase tracking-wider font-medium flex items-center">
            CATALOG
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-48 bg-darker rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              {% for collection in collections limit: 6 %}
                <a href="{{ collection.url }}" class="block px-4 py-2 text-white hover:bg-primary hover:text-black transition">
                  {{ collection.title }}
                </a>
              {% endfor %}
            </div>
          </div>
        </div>
        
        <a href="/collections/sale" class="text-white hover:text-primary transition uppercase tracking-wider font-medium flex items-center">
          <span class="bg-accent text-white text-xs font-bold px-2 py-1 rounded mr-2">HOT</span>
          SALE
        </a>
        
        <a href="/blogs/news" class="text-white hover:text-primary transition uppercase tracking-wider font-medium">BLOG</a>
        
        <a href="/pages/brand-story" class="text-white hover:text-primary transition uppercase tracking-wider font-medium">BRAND STORY</a>
        
        <div class="relative group">
          <a href="/pages/support" class="text-white hover:text-primary transition uppercase tracking-wider font-medium flex items-center">
            SUPPORT
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-48 bg-darker rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="py-2">
              <a href="/pages/faq" class="block px-4 py-2 text-white hover:bg-primary hover:text-black transition">FAQ</a>
              <a href="/pages/shipping-info" class="block px-4 py-2 text-white hover:bg-primary hover:text-black transition">Shipping</a>
              <a href="/pages/returns-policy" class="block px-4 py-2 text-white hover:bg-primary hover:text-black transition">Returns</a>
              <a href="/pages/contact-us" class="block px-4 py-2 text-white hover:bg-primary hover:text-black transition">Contact</a>
            </div>
          </div>
        </div>
        
        <a href="/pages/theme-features" class="text-white hover:text-primary transition uppercase tracking-wider font-medium">THEME FEATURES</a>
      </nav>
      
      <!-- Search, Language, Account, Cart -->
      <div class="flex items-center space-x-3">
        <button class="text-white hover:text-primary transition" onclick="openSearchModal()">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        
