<section class="py-16 bg-darker">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold uppercase tracking-wider text-white mb-4">
        {{ section.settings.section_title | default: 'GAMER REVIEWS' }}
      </h2>
      <p class="text-gray-400">
        {{ section.settings.section_subtitle | default: 'Hear from Gamers Who Trust Our Gear' }}
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Left Side - Main Review Image -->
      <div class="relative">
        {% if section.settings.main_review_image != blank %}
          <img 
            src="{{ section.settings.main_review_image | img_url: '600x400' }}" 
            alt="Gaming Review" 
            class="w-full h-96 object-cover rounded-lg"
          >
        {% else %}
          <div class="w-full h-96 bg-gradient-to-br from-purple-600 to-pink-600 rounded-lg flex items-center justify-center">
            <span class="text-white text-xl">Gaming Review Image</span>
          </div>
        {% endif %}
        
        <div class="absolute bottom-4 left-4 right-4 bg-black/80 rounded-lg p-4">
          <div class="flex items-center mb-2">
            {% for i in (1..5) %}
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            {% endfor %}
          </div>
          <p class="text-white text-sm mb-2">{{ section.settings.featured_review_text | default: 'This keyboard exceeded my expectations. The RGB lighting is amazing and the switches feel perfect for gaming.' }}</p>
          <p class="text-gray-400 text-xs">{{ section.settings.featured_reviewer_name | default: 'Alex J.' }}</p>
        </div>
      </div>
      
      <!-- Right Side - Review Grid -->
      <div class="space-y-6">
        {% for block in section.blocks %}
          {% if block.type == 'review_card' %}
            <div class="bg-dark rounded-lg p-6 flex">
              {% if block.settings.reviewer_image != blank %}
                <img 
                  src="{{ block.settings.reviewer_image | img_url: '80x80' }}" 
                  alt="{{ block.settings.reviewer_name }}" 
                  class="w-16 h-16 rounded-lg object-cover mr-4"
                >
              {% else %}
                <div class="w-16 h-16 bg-gray-700 rounded-lg mr-4 flex items-center justify-center">
                  <span class="text-gray-400 text-xs">IMG</span>
                </div>
              {% endif %}
              
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  {% for i in (1..5) %}
                    {% if i <= block.settings.rating %}
                      <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    {% else %}
                      <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    {% endif %}
                  {% endfor %}
                </div>
                <p class="text-white text-sm mb-2">{{ block.settings.review_text }}</p>
                <p class="text-gray-400 text-xs">{{ block.settings.reviewer_name }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Gamer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "GAMER REVIEWS"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Hear from Gamers Who Trust Our Gear"
    },
    {
      "type": "image_picker",
      "id": "main_review_image",
      "label": "Main Review Image"
    },
    {
      "type": "textarea",
      "id": "featured_review_text",
      "label": "Featured Review Text",
      "default": "This keyboard exceeded my expectations. The RGB lighting is amazing and the switches feel perfect for gaming."
    },
    {
      "type": "text",
      "id": "featured_reviewer_name",
      "label": "Featured Reviewer Name",
      "default": "Alex J."
    }
  ],
  "blocks": [
    {
      "type": "review_card",
      "name": "Review Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "reviewer_image",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name"
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
