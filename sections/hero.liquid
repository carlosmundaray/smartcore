<section class="relative overflow-hidden">
  <div class="w-full">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | img_url: 'master' }}" 
        alt="{{ section.settings.heading }}" 
        class="w-full object-cover h-[600px]"
      >
    {% else %}
      <img 
        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/z1pdl1i1xfmjm33bz5jshobym1ik-61qpzsnxAylnQcIHoNIo9bfZIMAbFO.webp" 
        alt="Gaming Setup" 
        class="w-full object-cover h-[600px]"
      >
    {% endif %}
    
    <!-- Overlay with green tint -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-primary/30"></div>
  </div>
  
  <!-- Side Navigation -->
  <div class="absolute bottom-4 left-4 flex flex-col space-y-4">
    <button class="bg-dark/80 hover:bg-primary/80 p-2 rounded-full transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </button>
    <button class="bg-dark/80 hover:bg-primary/80 p-2 rounded-full transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </button>
    <button class="bg-dark/80 hover:bg-primary/80 p-2 rounded-full transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
      </svg>
    </button>
  </div>
</section>

<!-- Brand Slider -->
<div class="brand-slider py-6">
  <div class="container mx-auto">
    <div class="flex justify-between items-center overflow-x-auto space-x-8 px-4">
      <img src="{{ 'urban-edge.png' | asset_url }}" alt="Urban Edge" class="brand-logo">
      <img src="{{ 'fullgear.png' | asset_url }}" alt="Fullgear" class="brand-logo">
      <img src="{{ 'nabrax-gaming.png' | asset_url }}" alt="Nabrax Gaming" class="brand-logo">
      <img src="{{ 'hyperguard.png' | asset_url }}" alt="Hyperguard" class="brand-logo">
      <img src="{{ 'spencer.png' | asset_url }}" alt="Spencer" class="brand-logo">
      <img src="{{ 'dreamgear.png' | asset_url }}" alt="Dreamgear" class="brand-logo">
      <img src="{{ 'aldenhaire.png' | asset_url }}" alt="Aldenhaire" class="brand-logo">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
