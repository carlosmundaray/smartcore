{% layout 'theme' %}

<article class="container mx-auto px-4 py-12 max-w-4xl">
  <header class="mb-8">
    <h1 class="text-4xl font-bold mb-4">{{ article.title }}</h1>
    
    <div class="flex items-center text-gray-600 mb-6">
      <span>{{ article.published_at | date: "%B %d, %Y" }}</span>
      <span class="mx-2">â€¢</span>
      <span>{{ article.author }}</span>
    </div>
    
    {% if article.image %}
      <img src="{{ article.image | img_url: '1200x600', crop: 'center' }}" 
           alt="{{ article.title }}" 
           class="w-full rounded-lg mb-8">
    {% endif %}
  </header>
  
  <div class="prose prose-lg max-w-none">
    {{ article.content }}
  </div>
  
  <footer class="mt-12 pt-8 border-t">
    {% if article.tags.size > 0 %}
      <div class="mb-6">
        <h3 class="text-lg font-semibold mb-2">Etiquetas:</h3>
        <div>
          {% for tag in article.tags %}
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" 
               class="inline-block bg-gray-100 px-3 py-1 rounded mr-2 text-sm">
              {{ tag }}
            </a>
          {% endfor %}
        </div>
      </div>
    {% endif %}
    
    <a href="{{ blog.url }}" class="inline-flex items-center text-blue-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Volver al blog
    </a>
  </footer>
</article>