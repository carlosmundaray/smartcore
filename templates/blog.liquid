{% layout 'theme' %}

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">{{ blog.title }}</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for article in blog.articles %}
      <article class="border rounded-lg overflow-hidden shadow">
        {% if article.image %}
          <img src="{{ article.image | img_url: '600x400', crop: 'center' }}" 
               alt="{{ article.title }}" 
               class="w-full h-48 object-cover">
        {% endif %}
        
        <div class="p-6">
          <h2 class="text-xl font-bold mb-2">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </h2>
          <p class="text-gray-600 mb-4">
            {{ article.published_at | date: "%B %d, %Y" }}
          </p>
          <div class="prose">
            {{ article.excerpt_or_content | strip_html | truncate: 150 }}
          </div>
          <a href="{{ article.url }}" class="mt-4 inline-block text-blue-600 font-medium">
            Leer m√°s
          </a>
        </div>
      </article>
    {% endfor %}
  </div>
</div>