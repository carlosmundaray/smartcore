<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Login Form -->
      <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
        <div class="p-6 border-b">
          <h1 class="text-2xl font-bold">{{ 'customer.login.title' | t }}</h1>
        </div>
        
        <div class="p-6">
          {% form 'customer_login' %}
            {{ form.errors | default_errors }}
            
            <div class="mb-4">
              <label for="customer_email" class="block text-sm font-medium text-gray-700 mb-1">
                {{ 'customer.login.email' | t }}
              </label>
              <input 
                type="email" 
                name="customer[email]" 
                id="customer_email" 
                class="w-full border-gray-300 rounded-lg shadow-sm focus:border-primary focus:ring-primary"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                  aria-describedby="customer-login-error"
                {% endif %}
                autocomplete="email"
                autofocus
              >
            </div>
            
            <div class="mb-4">
              <div class="flex justify-between items-center">
                <label for="customer_password" class="block text-sm font-medium text-gray-700 mb-1">
                  {{ 'customer.login.password' | t }}
                </label>
                <a href="#recover" class="text-sm text-primary hover:text-primary/80">
                  {{ 'customer.login.forgot_password' | t }}
                </a>
              </div>
              <input 
                type="password" 
                name="customer[password]" 
                id="customer_password" 
                class="w-full border-gray-300 rounded-lg shadow-sm focus:border-primary focus:ring-primary"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                  aria-describedby="customer-login-error"
                {% endif %}
              >
            </div>
            
            <div class="mt-6">
              <button 
                type="submit" 
                class="w-full bg-primary hover:bg-primary/90 text-white font-medium py-3 px-4 rounded-lg transition"
              >
                {{ 'customer.login.sign_in' | t }}
              </button>
            </div>
            
            <div class="mt-4 text-center">
              <a href="{{ routes.account_register_url }}" class="text-primary hover:text-primary/80">
                Create account
              </a>
            </div>
          {% endform %}
        </div>
      </div>
      
      <!-- Password Recovery Form -->
      <div id="recover" class="bg-white rounded-lg shadow-sm border overflow-hidden">
        <div class="p-6 border-b">
          <h2 class="text-2xl font-bold">{{ 'customer.recover_password.title' | t }}</h2>
          <p class="text-gray-600 mt-2">{{ 'customer.recover_password.subtext' | t }}</p>
        </div>
        
        <div class="p-6">
          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}
            
            {% if form.posted_successfully? %}
              <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
                {{ 'customer.recover_password.success' | t }}
              </div>
            {% endif %}
            
            <div class="mb-6">
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                {{ 'customer.recover_password.email' | t }}
              </label>
              <input 
                type="email" 
                name="email" 
                id="recover-email" 
                class="w-full border-gray-300 rounded-lg shadow-sm focus:border-primary focus:ring-primary"
              >
            </div>
            
            <div class="flex space-x-4">
              <button 
                type="submit" 
                class="flex-1 bg-primary hover:bg-primary/90 text-white font-medium py-2 px-4 rounded-lg transition"
              >
                {{ 'customer.recover_password.submit' | t }}
              </button>
              
              <a 
                href="#login" 
                class="flex-1 border border-gray-300 text-gray-700 font-medium py-2 px-4 rounded-lg hover:bg-gray-50 transition text-center"
              >
                {{ 'customer.recover_password.cancel' | t }}
              </a>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
